@model IEnumerable<N01511170_Assignment3.Models.Student>
@{
    ViewBag.Title = "List";
}

<h2>List of Students</h2>


<div id="containerlist">
    <h3 style="color:darkslateblue;">You can search Students by their names as well.</h3>
    <form action="/Student/List" method="GET">
        <input type="text" name="SearchKey" autocomplete="off" />
        <input type="submit" value="Search" />
    </form>
    <br />
    @foreach (var student in Model)
    {
        <div class="listitem row">
            <div class="col-md-12"><a href="/Student/Show/@student.StudentId" style="color:darkcyan;font-size:30px;font-style:italic;">@student.StudentFname @student.StudentLname</a></div>
        </div>
    }
</div>
